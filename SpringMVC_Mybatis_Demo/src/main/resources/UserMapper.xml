<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">

    <select id="queryAll" resultType="test.dao.User">
        SELECT * FROM User ORDER BY id ASC
    </select>

    <select id="selectUser" parameterType="int" resultType="test.dao.User">
        SELECT * FROM User WHERE id = #{id}
    </select>

    <select id="selectUserName" parameterType="int" resultType="test.dao.User">
        SELECT name FROM User WHERE id = #{id}
    </select>

    <insert id="insertUser" parameterType="test.dao.User" useGeneratedKeys="true" keyProperty="id">
        insert into User (name, address)
                VALUES (#{name}, #{address})
    </insert>

    <delete id="deleteUser" parameterType="int" >
        DELETE FROM User WHERE id = #{id}
    </delete>

    <update id="updateUser" parameterType="test.dao.User">
        UPDATE User set
            name = #{name},
            address = #{address}
        where id = #{id}
    </update>
</mapper>